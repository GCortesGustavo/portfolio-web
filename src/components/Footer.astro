---
const currentYear = new Date().getFullYear()
import Gmail from "../icons/Gmail.astro"
import LinkedIn from "../icons/LinkedIn.astro"
import GitHub from "../icons/GitHub.astro"
---

<footer class="opacity-80 m-4 mt-16 w-full mx-auto container lg:max-w-4xl md:max-w-2xl mb-10">
    <div class="flex flex-wrap items-center justify-between py-4 px-6 mx-auto max-w-screen-xl">
        <!-- Texto del pie de página -->
        <span class="text-sm text-zinc-800 dark:text-zinc-200">
            © {currentYear}
            <a href="/#sobre-mi" class="hover:underline">Gustavo Cortes</a>. Todos los derechos reservados
        </span>

        <!-- Enlaces de redes sociales -->
        <div class="flex space-x-6">
            <a href="https://www.linkedin.com/in/cortes-gustavo/" target="_blank" class="hover:scale-110 transition-transform duration-300">
                <LinkedIn class="h-6 w-6 text-blue-600"/>
            </a>
            <a href="https://github.com/GCortesGustavo" target="_blank" class="hover:scale-110 transition-transform duration-300">
                <GitHub class="h-6 w-6 text-gray-800"/>
            </a>
            <a href="mailto:gustavocortes934@gmail.com" class="hover:scale-110 transition-transform duration-300">
                <Gmail class="h-6 w-6 text-red-600"/>
            </a>
        </div>

        <!-- Enlaces adicionales -->
        <ul class="flex space-x-4 text-sm font-medium dark:text-white">
            <li>
                <a href="/#sobre-mi" class="hover:underline">Sobre mí</a>
            </li>
            <li>
                <a href="mailto:gustavocortes934@gmail.com" class="hover:underline">Contacto</a>
            </li>
        </ul>
    </div>
</footer>
